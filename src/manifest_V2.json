{
  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "name": "ogruNotifier",
  "version": "1.2.1",
  "homepage_url": "https://github.com/innokentiyt/ogruNotifier",
  "icons": {
    "48": "icons/ogru-48.png",
    "32": "icons/ogru-32.png"
  },

  "default_locale": "en",

  "permissions": [
    "*://www.old-games.ru/*",
    "alarms",
    "cookies",
    "webRequest",
    "storage"
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": true
  },

  "background": {
    "scripts": [
      "background-script.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "32": "icons/ogru-32.png",
      "48": "icons/ogru-48.png"
    },
    "default_title": "Old-Games.RU Notifier"
  }
}
