{
  "description": "Adds unread notifications counter from Old-Games.RU into the user bar. Click it to open alerts page on Old-Games.RU.",
  "manifest_version": 2,
  "name": "ogruNotifier",
  "version": "1.0.0",
  "homepage_url": "https://www.old-games.ru/",
  "icons": {
    "48": "icons/ogru-48.png",
    "32": "icons/ogru-32.png"
  },

  "permissions": [
    "*://www.old-games.ru/*",
    "tabs",
    "alarms",
    "cookies"
  ],

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background-script.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "32": "icons/ogru-32.png",
      "48": "icons/ogru-48.png"
    },
    "default_title": "Old-Games.RU Notifier"
  }
}
